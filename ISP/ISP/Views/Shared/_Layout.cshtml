<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    @{
        if (User.IsInRole("Estudiante") && Request.IsAuthenticated)
        {
        <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ISPG", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Informe Tecnico", "Create", "InformeTecnicoEstudiante")</li>
                    <li>@Html.ActionLink("Anteproyecto", "Create", "AnteproyectoEstudiante")</li>
                    <li>@Html.ActionLink("Examen Egel", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Proyecto Residencias", "Index", "Home")</li>
                    <li>@Html.ActionLink("Tesis", "Create", "TesisEstudiante")</li>
                    <li>@Html.ActionLink("Banco de Proyectos", "Index", "BancoProyecto")</li>
                    <li>@Html.ActionLink("Cambiar Contraseña", "Contact", "Home")</li>
                </ul>

                 @Html.Partial("_LoginPartial")
            </div>
        </div>
        </div>
        }
        else if (User.IsInRole("Asesor") && Request.IsAuthenticated)
        {
        <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ISPG", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Informe Semestral", "Create", "InformeTecnicoEstudiante")</li>
                    <li>@Html.ActionLink("Formato Calificacion", "Create", "AnteproyectoEstudiante")</li>                   
                </ul>

                 @Html.Partial("_LoginPartial")
            </div>
        </div>
      </div>

        }
        else if (User.IsInRole("JefedeVinculacion") && Request.IsAuthenticated)
        {
        <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ISPG", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Asignar M.Academia", "Create", "InformeTecnicoEstudiante")</li>
                    <li>@Html.ActionLink("Asignar Asesor", "Create", "AnteproyectoEstudiante")</li>                   
                </ul>

                 @Html.Partial("_LoginPartial")
            </div>
        </div>
        </div>

        }
        else if (User.IsInRole("Academia") && Request.IsAuthenticated)
        {
             <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ISPG", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Tablero", "Create", "InformeTecnicoEstudiante")</li>                     
                </ul>

                 @Html.Partial("_LoginPartial")
            </div>
        </div>
        </div>
        }
        else
        {
            
        }
    }

    <div class="container body-content">
        @RenderBody()
        
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
